RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirect index.php to /home
RewriteCond %{THE_REQUEST} /index\.php[\s?] [NC]
RewriteRule ^index\.php$ /home [R=301,L]

# Internally rewrite /home to index.php
RewriteRule ^home$ index.php [L]

# âœ… Exclude static assets from PHP rewrite
RewriteCond %{REQUEST_URI} \.(js|css|png|jpg|jpeg|gif|webp|svg|ico)$ [NC]
RewriteRule ^ - [L]

# Hide .php extension
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/([^.]+)\.php[\s?] [NC]
RewriteRule ^ /%1 [R=301,L]

# Rewrite to actual .php file
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^.]+)$ $1.php [L]
